[%- MACRO pagination(pageNumber, perPage, pageCount)  BLOCK -%]
[% 
    firstPage = pageNumber - 3;
    IF firstPage < 1; firstPage = 1; END;
    lastPage = firstPage + 6;
    IF lastPage > pageCount;
        lastPage = pageCount;
        firstPage = lastPage - 6;
        IF firstPage < 1; firstPage = 1; END;
    END;
%]
    <div class="pagination pagination-right">
        <ul>
          [% IF pageNumber == 1 %]
          <li class="disabled"><a>&larr;</a></li>
          [% ELSE %]
          <li><a href="[% c.pf_hash_for(c.controller.action_for('list'),pageNumber - 1,perPage) %]">&larr;</a></li>
          [% END %]
          [% currentPage = firstPage %]
          [% WHILE currentPage <= lastPage %]
            [%IF currentPage == pageNumber %]
              <li class="disabled"><a>[%currentPage%]</a></li>
            [% ELSE  %]
              <li><a href="[% c.pf_hash_for(c.controller.action_for('list'),currentPage,perPage) %]">[%currentPage%]</a></li>
            [%END%]
          [%currentPage = currentPage + 1%]
          [% END %]
          [% IF pageNumber == lastPage %]
          <li class="disabled"><a >&rarr;</a></li>
          [% ELSE %]
          <li><a href="[% c.pf_hash_for(c.controller.action_for('list'),pageNumber + 1,perPage) %]">&rarr;</a></li>
          [% END %]
        </ul>
    </div>
[%- END -%]

      [% pagination(pageNum, perPage, pageCount) %]
      <table id="switches" class="table items">
        <thead>
          <tr>
            <th>[% l('IP Address') %]</th>
            <th class="hidden-phone">[% l('Description') %]</th>
            <th class="hidden-phone">[% l('Type') %]</th>
            <th class="hidden-phone">[% l('Mode') %]</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          [% FOREACH switch IN items %]
          <tr>
            <td><a href="[% c.uri_for(c.controller('Configuration::Switch').action_for('view'), [ switch.id ]) %]">[% switch.id %]</a>
            [% IF switch.floatingdevice && switch.floatingdevice.id %] <a class="btn btn-mini" href="[% c.uri_for(c.controller('Configuration::FloatingDevice').action_for('view'), [ switch.floatingdevice.id ]) %]">[% l('Edit floating device') %]</a>[% END %]</td>
            <td class="hidden-phone">[% switch.description %]</td>
            <td class="hidden-phone">[% switch.type %]</td>
            <td class="hidden-phone">[% l(switch.mode) %]</td>
            <td>
              [%- IF can_access("SWITCHES_CREATE") %]
              <a class="btn btn-mini" href="[% c.uri_for(c.controller('Configuration::Switch').action_for('clone'), [ switch.id ]) %]">[% l('Clone') %]</a>
              [%- END %]
              [% IF switch.id != 'default' && can_access("SWITCHES_DELETE") %]<a class="btn btn-mini btn-danger" href="[% c.uri_for(c.controller('Configuration::Switch').action_for('remove'), [ switch.id ]) %]">[% l('Delete') %]</a>[% END %]
            </td>
          </tr>
          [% END -%]
        </tbody>
      </table>
      [% pagination(pageNum, perPage, pageCount) %]
