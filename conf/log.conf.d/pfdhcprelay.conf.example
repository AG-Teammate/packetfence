### pfdns logger ###
log4perl.rootLogger = INFO, PFDHCPRELAY

### Categories ###
# Below, you can specify different categories (based on package names) for different logging levels
#log4perl.category.pf.SNMP = WARN

### Logging for pfdns
log4perl.appender.PFDHCPRELAY                              = Log::Log4perl::Appender::File
log4perl.appender.PFDHCPRELAY.filename                     = /usr/local/pf/logs/pfdhcprelay.log
log4perl.appender.PFDHCPRELAY.syswrite                     = 1
log4perl.appender.PFDHCPRELAY.mode                         = append
log4perl.appender.PFDHCPRELAY.layout                       = PatternLayout
log4perl.appender.PFDHCPRELAY.layout.ConversionPattern     = %d{MMM dd HH:mm:ss} %X{proc}(%X{tid}) %p: %m (%M)%n
log4perl.appender.PFDHCPRELAY.umask                        = 0002
log4perl.appender.PFDHCPRELAY.user                         = pf
log4perl.appender.PFDHCPRELAY.group                        = pf
log4perl.appender.PFDHCPRELAY.binmode                      = utf8
